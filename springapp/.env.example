# Example environment variables for Render deployment
# Do NOT commit real secrets. Set these in Render dashboard or use secrets manager.

# JDBC URL - include jdbc: prefix
# Example: jdbc:postgresql://<HOST>:5432/<DB_NAME>
SPRING_DATASOURCE_URL=jdbc:postgresql://<DB_HOST>:5432/<DB_NAME>
SPRING_DATASOURCE_USERNAME=<DB_USER>
SPRING_DATASOURCE_PASSWORD=<DB_PASSWORD>
SPRING_DATASOURCE_DRIVER=org.postgresql.Driver

# JPA settings
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect
SPRING_JPA_JDBC_TIME_ZONE=UTC

# Port (Render sets this automatically; keep default for local runs)
PORT=8080

# JVM timezone override (optional) - if your JVM uses an old timezone name like Asia/Calcutta,
# set this to a Postgres-accepted name (e.g. -Duser.timezone=Asia/Kolkata)
JAVA_TOOL_OPTIONS=-Duser.timezone=Asia/Kolkata

# Mail (dummy values - replace with real credentials or use secrets)
SPRING_MAIL_USERNAME=dummyemail.smtp@gmail.com
SPRING_MAIL_PASSWORD=<MAIL_PASSWORD>